{
  "name"  : "Obra pública abierta",
  "type"  : "point",
  "multiple" : true,
  "disable" : [0,0],
  "level" : [],
  "src"   : "/js/maps/opa.json",
  "file"  : "json",
  "link"  : {
    "url"    : "/opa.html",
    "column" : "key"
  },
  "style" : {
    "fillColor" : "#f49d51",
    "color"     : "#ea750f"
  },
  "location" : {
    "lat" : "lat",
    "lng" : "lng",
    "state" : "state"
  },
  "values"  : ["monto_total_inversion", "ejercido"],
  "data"    : ["key","name","ramo","unidad","state","lat","lng","advance","ciclo","classification"],
  "current" : {},
  "filters" : [
    {"type" : "search", "field" : "name", "title" : "Proyecto"},
    {"type" : "state", "field" : "state"},
    {"type" : "branch", "field" : "ramo"},
    {"type" : "unit", "field" : "id_unidad"},
    {"type" : "year", "field" : "ciclo", "title" : "Ciclo"}
  ],
  "extraFilters" : [
    {"type" : "extra", "field" : "classification", "title" : "Clasificación ciudadana"}
  ],
  "graphs" : {
    "graph1" : {
      "title" : "Monto total invertido por año",
      "xAxis" : {
        "field" : "ciclo",
        "title" : "año",
        "type"  : null
      },
      "yAxis" : {
        "field" : "monto_total_inversion",
        "title" : "monto total invertido"
      },
      "zAxis" : {
        "field" : "ramo",
        "title" : "ramo",
        "type"  : "branch"
      },
      "maxLocations" : 5,
      "colors" : ["red", "green", "blue", "yellow", "purple", "pink", "black", "orange", "gray", "maroon"]
    },
    "graph2" : {
      "title" : "Monto total por ramo",
      "value" : "monto_total_inversion",
      "area" : {
        "field" : "ramo",
        "title" : "ramo",
        "type"  : "branch"
      },
      "maxLocations" : 5,
      "colors" : ["red", "green", "blue", "yellow", "purple", "pink", "black", "orange", "gray", "maroon", "aquamarine", "chartreuse", "cyan", "darkorange", "deeppink", "gold"]
    },

    "graph3" : {
      "title" : "Monto total invertido por año",
      "xAxis" : {
        "field" : "ciclo",
        "title" : "año",
        "type"  : null
      },
      "yAxis" : {
        "field" : "monto_total_inversion",
        "title" : "monto total invertido"
      },
      "zAxis" : {
        "field" : "ramo",
        "title" : "ramo",
        "type"  : "branch"
      },
      "maxLocations" : 5,
      "colors" : ["red", "green", "blue", "yellow", "purple", "pink", "black", "orange", "gray", "maroon"]
    },

    "graph4" : {
      "title" : "Monto total por año",
      "value" : "monto_total_inversion",
      "area" : {
        "field" : "ramo",
        "title" : "ramo",
        "type"  : "branch"
      },
      "points" : {
        "field" : "ciclo",
        "title" : "año",
        "type"  : null
      },
      "maxLocations" : 5,
      "colors" : ["red", "green", "blue", "yellow", "purple", "pink", "black", "orange", "gray", "maroon", "aquamarine", "chartreuse", "cyan", "darkorange", "deeppink", "gold"]
    }


  },
  "template" : "<%=name%> <div class='amount_label'><div class='row'><div class='col-sm-6'><h5>Monto total de inversión</h5>  $<%=monto_total_inversion%><h5>Monto ejercido</h5> $<%=ejercido%></div><div class='col-sm-6'><h5>Avance Físico</h5> <%=advance%>% <div class='bar'><span class='bar inside total' style='width:<%=advance%>%'></span><h5>Año</h5> <%=ciclo%></div></div></div> <br><a href='/opa.html#<%=key%>'  class='btn more info'>Más información</a></div>"
}